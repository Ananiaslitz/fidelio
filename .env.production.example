# Production Environment Variables
# Copy this file to .env.production and fill in your values

# Domain Configuration
DOMAIN=YOURDOMAIN.cloud

# Database Configuration
POSTGRES_USER=fidelio_prod
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_123!
POSTGRES_DB=fidelio_production

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key-here

# Webhook Configuration
WEBHOOK_SECRET=CHANGE_THIS_WEBHOOK_SECRET_generate_with_openssl_rand_hex_32

# Shadow Wallet Configuration
SHADOW_WALLET_TTL_HOURS=72

# Worker Configuration
EXPIRATION_WORKER_INTERVAL_MINUTES=60

# Email Service (Resend)
RESEND_API_KEY=your_resend_api_key_here

# SSL/HTTPS Configuration
# Set to 'true' after obtaining SSL certificates
SSL_ENABLED=false
CERTBOT_EMAIL=your-email@example.com
